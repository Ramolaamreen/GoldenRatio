<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".Interactive">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interactive Golden Rectangle"
        android:textSize="22sp"
        android:fontFamily="@font/aclonica"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000000"/>

    <ImageView
        android:layout_width="323dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/imagelast"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter "
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:paddingTop="18dp"
            android:textColor="#000000"
            android:id="@+id/a"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" a"
            android:paddingTop="18dp"
            android:id="@+id/en"
            android:textStyle="italic"
            android:textColor="#0000ff"
            android:layout_toRightOf="@+id/a"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/en"
            android:text="  value:"
            android:paddingTop="18dp"
            android:textSize="18sp"
            android:id="@+id/val"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/val"
            android:inputType="number"
            android:id="@+id/eta"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:text="Smaller "
            android:id="@+id/c"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:text="b "
            android:id="@+id/c1"
            android:textStyle="italic"
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:layout_toRightOf="@id/c"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:text=" value:  "
            android:id="@+id/c2"
            android:textStyle="italic"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_toRightOf="@id/c1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:text=" 0 "
            android:id="@+id/c3"
            android:textStyle="italic"
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:layout_toRightOf="@id/c2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area of the Golden Rectangle:"
            android:layout_below="@id/c"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/area"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.0"
            android:layout_below="@id/c"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/area"
            android:textSize="18sp"
            android:textColor="#ff0000"
            android:id="@+id/area1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golden Ratio(a/b): 1.618033"
            android:layout_below="@+id/area"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>





    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/aclonica"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter larger value(a) for the given Golden Rectangle.\nIt's corresponding smaller value(b) will be returned, such that a and b will always be in golden ratio."
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#000000"/>


    </LinearLayout>

</ScrollView>